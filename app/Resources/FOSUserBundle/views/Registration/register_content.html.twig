		    		<div class="alert">
						<p class="alert-text">{{ form.email.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			{% for passwordField in form.plainPassword %}
			    <div class="inputLabel">
			    	
			        {{ form_widget(passwordField, { 'attr': {'class': 'rounder', 'placeholder': passwordField.vars.label }}) }}
			        {% if (passwordField.vars.errors|length > 0) %}
		    			<div class="alert">
							<p class="alert-text">{{ passwordField.vars.errors[0].message }}</p>
						</div>
		    		{% endif %}
			        
			        
			    </div>
			{% endfor %}

			<div class="inputLabel">	
					
				{{ form_widget(form.about, { 'attr': {'class': 'rounder', 'placeholder': 'Sobre Você' }}) }}
				{% if (form.about.vars.errors|length > 0) %}
