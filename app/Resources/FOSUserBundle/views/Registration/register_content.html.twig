{% extends '::base.html.twig' %}

{% block body %}
{% trans_default_domain 'FOSUserBundle' %}
<script type="text/javascript">

jQuery(document).ready(function () {

	mudarTipo();

	$("#form").validate({
			

		});

});
function mudarTipo() {
	//$('#show_grade').hide();
	var text = getSelectedText('fos_user_registration_form_type');
	if (text == 'Aluno') {
		document.getElementById("show_grade").style.display = 'none';
		document.getElementById("fos_user_registration_form_price").style.display = 'none';
		document.getElementById("fos_user_registration_form_about_course").style.display = 'none';

	}
	else  {
		document.getElementById("show_grade").style.display = 'block';
		document.getElementById("fos_user_registration_form_price").style.display = 'block';
		document.getElementById("fos_user_registration_form_about_course").style.display = 'block';
	}
    //document.getElementById(two).style.display = 'none';
}

function getSelectedText(elementId) {
    var elt = document.getElementById(elementId);

    if (elt.selectedIndex == -1)
        return null;

    return elt.options[elt.selectedIndex].text;
}
</script>
<div class="row">
	<div class="twelvecol column ">
	<h3>Cadastre-se agora!</h3>
		<form action="{{ path('fos_user_registration_register') }}" id="form" {{ form_enctype(form) }} method="POST" class="new_entity_factories_free_entity_factory" novalidate>
	    	{{ form_errors(form) }}
	    	{{ form_row(form._token) }} 
	 
		    <div class="inputLabel">
		    	
		    	
				{{ form_widget(form.name, { 'attr': {'class': 'rounder', 'placeholder': 'Nome Completo' } }) }}
				{% if (form.name.vars.errors|length > 0) %}
		    		<div class="alert">
						<p class="alert-text">{{ form.name.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			<div class="inputLabel">
		    	
		    	
				{{ form_widget(form.type, { 'attr': {'class': 'rounder', 'placeholder': 'Tipo', 'onchange': 'mudarTipo()' } }) }}
				{% if (form.type.vars.errors|length > 0) %}
		    		<div class="alert">
						<p class="alert-text">{{ form.type.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			<div class="inputLabel" id="show_grade">
		    	
		    	
				{{ form_widget(form.grade, { 'attr': {'class': 'rounder', 'placeholder': 'Tipo' } }) }}
