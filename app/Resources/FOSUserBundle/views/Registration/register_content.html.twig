		    		<div class="alert">
						<p class="alert-text">{{ form.file.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			<br />

			<div class="inputLabel">
		    	
		    	
				{{ form_widget(form.price, { 'attr': {'class': 'rounder', 'placeholder': 'Preço' } }) }}
				{% if (form.price.vars.errors|length > 0) %}
		    		<div class="alert">
						<p class="alert-text">{{ form.price.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			<div class="inputLabel">	
					
				{{ form_widget(form.username, { 'attr': {'class': 'rounder', 'placeholder': 'Apelido' }}) }}
				{% if (form.username.vars.errors|length > 0) %}
		    		<div class="alert">
						<p class="alert-text">{{ form.username.vars.errors[0].message }}</p>
					</div>
		    	{% endif %}
			</div>

			<div class="inputLabel">
				
				{{ form_widget(form.email, { 'attr': {'class': 'rounder', 'placeholder': form.email.vars.label }}) }}
