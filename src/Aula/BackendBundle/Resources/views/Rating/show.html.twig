{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rating</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Teacherid</th>
                <td>{{ entity.teacherId }}</td>
            </tr>
            <tr>
                <th>Studentid</th>
                <td>{{ entity.studentId }}</td>
            </tr>
            <tr>
                <th>Classid</th>
                <td>{{ entity.classId }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ entity.rating }}</td>
            </tr>
            <tr>
                <th>Testimonial</th>
                <td>{{ entity.testimonial }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('rating') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('rating_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
